@{
    ViewData["Title"] = "SafeBet – Home";
}

<style>
  body {
    background: none !important;
  }
</style>

<section class="py-5 text-center" style="padding-top: 4rem;">
    <h1 class="display-5 fw-semibold mb-2" style="color:white;"><strong>Welcome to SafeBet</strong></h1>
    <p class="lead mb-0" style="color:white; opacity:0.9;">
        <strong>Your practice arena for casino strategies — no real money, just learning.</strong>
    </p>
</section>

<div class="container py-4">
    <div class="row g-4">

        <div class="col-12 col-md-6">
            <div class="card-overlay">
                <h2 class="h4 mb-1">Blackjack</h2>
                <p class="mb-3">Deal, Hit, Stand. Later: ask the ML model for a hint.</p>

                <div class="d-flex gap-2">
                    <a asp-controller="Blackjack" asp-action="Index" class="btn btn-primary">Play Blackjack</a>
                    <a asp-controller="Home" asp-action="BlackjackRules" class="btn btn-outline-success">Rules</a>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card-overlay">
                <h2 class="h4 mb-1">Roulette</h2>
                <p class="mb-3">Interactive grid with random spin results. Hover for odds.</p>

                <div class="d-flex gap-2">
                    <a asp-controller="Roulette" asp-action="Index" class="btn btn-success">Play Roulette</a>
                    <a asp-controller="Home" asp-action="RouletteRules" class="btn btn-outline-success">Odds</a>
                </div>
            </div>
        </div>

    </div>
</div>