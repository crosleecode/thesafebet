@model SafeBet.Models.MetricsViewModel
@{
    ViewData["Title"] = "Player Metrics";
}

<div class="container py-5 text-white">

    <div class="text-center mb-4">
        <h1 class="display-6 fw-semibold mb-1">Player Metrics</h1>
        <div class="opacity-75">Session-wide practice stats</div>
    </div>

    <div class="row g-4">

        <!-- Activity -->
        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm" style="background:#002d00; color:#fff;">
                <div class="card-body">
                    <h2 class="h5 mb-1 text-white">Activity</h2>
                    <div class="text-light small">Overall usage</div>
                    <ul class="mt-3 mb-0 list-unstyled">
                        <li><strong>Games played:</strong> @Model.GamesPlayed</li>
                        <li><strong>Advice requests:</strong> @Model.AdviceRequests</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Blackjack Totals -->
        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm" style="background:#002d00; color:#fff;">
                <div class="card-body">
                    <h2 class="h5 mb-1 text-white">Blackjack (All)</h2>
                    <div class="text-light small">Totals</div>
                    <ul class="mt-3 mb-0 list-unstyled">
                        <li><strong>Wins:</strong> @Model.BlackjackWins</li>
                        <li><strong>Losses:</strong> @Model.BlackjackLosses</li>
                        <li><strong>Win/Loss ratio:</strong> @Model.WinLossRatioOverall</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- With Advice -->
        <div class="col-12 col-md-4">
            <div class="card h-100 border-0 shadow-sm" style="background:#002d00; color:#fff;">
                <div class="card-body">
                    <h2 class="h5 mb-1 text-white">With Advice</h2>
                    <div class="text-light small">When advice was used</div>
                    <ul class="mt-3 mb-0 list-unstyled">
                        <li><strong>Wins (advice):</strong> @Model.AdviceWins</li>
                        <li><strong>Losses (advice):</strong> @Model.AdviceLosses</li>
                        <li><strong>Win/Loss ratio (advice):</strong> @Model.WinLossRatioWithAdvice</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Net Earnings -->
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="background:#002d00; color:#fff;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h2 class="h5 mb-0 text-white">Net Earnings</h2>
                    <div class="fs-5">@Model.NetEarnings.ToString("C")</div>
                </div>
            </div>
        </div>

    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index"
           class="btn"
           style="background:#fff; color:#0e3b22; border:1px solid #0e3b22;">
            Back to Home
        </a>
    </div>

</div>